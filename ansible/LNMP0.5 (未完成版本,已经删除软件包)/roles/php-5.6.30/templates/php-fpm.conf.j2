[global]
pid = run/php-fpm.pid
;error_log = /apps/log/php5/php-fpm-error.log
log_level = notice

[apps]
user=apps
group=apps
listen = 127.0.0.1:9000
pm = dynamic
pm.max_children = 300
pm.start_servers = 50
pm.min_spare_servers = 20
pm.max_spare_servers = 300
pm.max_requests = 512000
request_slowlog_timeout = 5
slowlog = /apps/log/php5/$pool.log.slow
request_terminate_timeout = 300

catch_workers_output = 1
php_flag[display_errors] = off
;php_admin_flag[log_errors] = on
;php_admin_value[error_log] = /apps/log/php5/php-fpm-error.log

include=etc/fpm.d/*.conf
pm.status_path = /status
